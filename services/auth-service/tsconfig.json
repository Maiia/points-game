{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}