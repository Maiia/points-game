{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@points-game-types": ["shared1"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "shared-types",
    "shared1"
  ]
}